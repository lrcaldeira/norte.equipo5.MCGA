@model IEnumerable<ArtShop.Entities.Model.Product>

@{
    ViewBag.Title = "Index";
}

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Productos</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <div class="table-responsive">
                <table id="mainTable" class="table editable-table table-bordered table-striped m-b-0 no-wrap">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QuantitySold)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AvgStars)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ArtistId)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Image)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuantitySold)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AvgStars)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ArtistId)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
</div>
</div>
